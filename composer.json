{
    "name": "acme-widget-co/sales-system",
    "description": "A proof of concept for Acme Widget Co's new sales system.",
    "type": "project",
    "require": {
        "php": "8.2.28"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyse": "phpstan analyse src tests --level=8"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "8.2.28"
        }
    }
}